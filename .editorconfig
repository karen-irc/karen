# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{js,ts,jsx,tsx,html,css}]
indent_style = space
indent_size = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[tslint.json]
indent_style = space
indent_size = 4

[{tsconfig.json,jsconfig.json}]
indent_style = space
indent_size = 4
