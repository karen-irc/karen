{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": false, // FIXME: #503 we'd like to enable this option again.
        "outDir": "./dist/client/__obj/",
        "pretty": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "ES2015"
    },

    // Exclude a specified directry or specified TypeScript file (.ts, .tsx)
    "exclude": [
        ".git",
        "client/audio",
        "client/css",
        "client/img",
        "client/js",
        "client/themes",
        "defaults",
        "dist",
        "node_modules",
        "server",
        "test",
        "tools",
        "tsd"
    ]
}
