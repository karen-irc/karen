{
    "compilerOptions": {
        "diagnostics": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "es2015",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "outDir": "./obj/client/",
        "pretty": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": false,
        "target": "ES2015"
    },

    // Exclude a specified directry or specified TypeScript file (.ts, .tsx)
    "exclude": [
        ".git",
        "defaults",
        "dist",
        "node_modules",
        "obj",
        "src/client/audio",
        "src/client/css",
        "src/client/img",
        "src/client/js",
        "src/client/themes",
        "src/server",
        "tools",
        "typings/browser",
        "typings/browser.d.ts",
        "typings/main"
    ]
}
